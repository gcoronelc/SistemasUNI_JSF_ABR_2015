<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="VentasJPAPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>pe.egcc.ventasjpa.domain.Categoria</class>
    <class>pe.egcc.ventasjpa.domain.Pago</class>
    <class>pe.egcc.ventasjpa.domain.TipoPago</class>
    <class>pe.egcc.ventasjpa.domain.Empleado</class>
    <class>pe.egcc.ventasjpa.domain.Producto</class>
    <class>pe.egcc.ventasjpa.domain.Detalle</class>
    <class>pe.egcc.ventasjpa.domain.Usuario</class>
    <class>pe.egcc.ventasjpa.domain.Venta</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
      <property name="javax.persistence.jdbc.user" value="ventas"/>
      <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
      <property name="eclipselink.logging.level" value="FINE"/>
    </properties>
  </persistence-unit>
</persistence>
